{
  "manifest_version": 2,

  "name": "Kinect-Presentation",
  "description": "SD&D Presentation",
  "version": "1.0",

  "browser_action": {
    "default_icon": "bedflix.png",
    "default_popup": "bedflix.html",
    "default_title": "Kinect-Presentation"
  },
  "background": {
      "scripts": [
        "js/jquery-3.2.1.min.js",
        "js/background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "http://*/*", 
    "https://*/*",
    "file://*",
    "webNavigation"
  ]
}